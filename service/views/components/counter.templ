package components

import "strconv"

templ Counter(counterVal int) {
	<div>
		<div id="counter">{ strconv.Itoa(counterVal) }</div>
		<button
 			hx-target="#counter"
 			hx-post="/decrease"
 			class="btn bg-blue-700 hover:bg-blue-800 rounded-lg py-2.5 px-4 text-white"
		>
			-
		</button>
		<button
 			hx-target="#counter"
 			hx-post="/increase"
 			class="btn bg-blue-700 hover:bg-blue-800 rounded-lg py-2.5 px-4 text-white"
		>
			+
		</button>
	</div>
}
