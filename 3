package counter

import (
	"personal/health-app/views/layout"
	"fmt"
)

var images = []string{"heart", "medal", "star", "star"}

templ CounterIndex() {
	@layout.App() {
		@CountersList()
	}
}

templ CountersList() {
	<div class="grid col-span-12 md:grid-cols-2 gap-6">
		for i := range images {
			@Counter(fmt.Sprint(i))
		}
	</div>
}

templ Counter(idCount string) {
	<div class="card bg-accent text-neutral-content w-96">
		<div class="card-body items-center text-center">
			<h2 class="text-xl font-semibold mb-4 text-gray-700">Cheat Meals</h2>
			<div class="card-actions justify-end">
				<button class="btn btn-primary">Accept</button>
				<button class="btn btn-ghost">Deny</button>
			</div>
		</div>
	</div>
}
